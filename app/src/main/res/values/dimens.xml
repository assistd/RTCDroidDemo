<resources>
    <dimen name="fab_margin">16dp</dimen>

    <dimen name="keyline_1">16dp</dimen>
    <dimen name="keyline_1_minus_8dp">8dp</dimen>

    <!-- Needed as the impl of CardView in pre-Lollipop unnecessarily adds 16 dp to the top and bottom -->
    <dimen name="fab_menu_item_margin_top">0dp</dimen>
    <!-- CoordinatorLayout adds to the margins of the FAB, official bug: 'Issue 176096:
    Using CoordinatorLayout view anchors will cause margins to be ignored' -->
    <dimen name="coordinator_layout_offset">12dp</dimen>
    <!-- Needed as another side effect of the bug above -->
    <!-- Needed in order to align vertically the fabs -->
    <dimen name="mini_fab_margin_left">@dimen/keyline_1_minus_8dp</dimen>
    <dimen name="mini_fab_margin_top">0dp</dimen>
    <dimen name="mini_fab_margin_right">@dimen/keyline_1_minus_8dp</dimen>
    <dimen name="mini_fab_margin_bottom">0dp</dimen>
</resources>